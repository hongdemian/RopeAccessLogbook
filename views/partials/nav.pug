.title-bar(data-responsive-toggle="responsive-menu", data-hide-for="medium")
		button.menu-icon(type="button", data-toggle="responsive-menu")
		.title-bar-title Menu
#responsive-menu.top-bar
	.top-bar-left
		ul.menu.large-horizontal(data-responsive-menu="accordion small-dropdown")
			li
				a.menu-text(href='/')
					i.far.fa-city
					|  Connecting Reflections
				ul.vertical.medium-horizontal.menu
					if isAuthenticated
						li
							a(href='/forms')
								i.fas.fa-clipboard-check
								|  Forms
							ul.vertical.medium-horizontal.menu.small-centered
								li
									a(href="/forms/flha")
										i.far.fa-clipboard-check
										|  FLHA
								li
									a(href="/forms/fplan")
										i.fab.fa-accusoft
										|  Fall Protection Plan
								li
									a(href="/forms/emerg")
										i.far.fa-biohazard
										|  Emergency Response
								li
									a(href="/forms/hotwork")
										i.far.fa-fire-extinguisher
										|  Hot Work
								li
									a(href="/forms/entries")
										i.far.fa-file-archive
										|  Entries
						li
							a(href='/logbook')
								i.fas.fa-book
								|  LogBook
						li
							a(href='/incident')
								i.fas.fa-ambulance
								|  Incident
					li
						a(href='https://w.connectingreflections.ca')
							i.fas.fa-cloud-sun-rain
							|  Weather
	.top-bar-right
		ul.menu
			unless isAuthenticated
				li
					a(href='/login')
						i.fas.fa-sign-in-alt
						|  Login
				li
					a(href='/signup')
						i.fas.fa-user-plus
						|  Register
			else
				li
					ul.dropdown.menu#user-dropdown-menu(data-dropdown-menu)
						li.is-dropdown-submenu-parent
							a(href='#')
								i.fas.fa-user-alt
								|  #{username}
							ul.menu
								li
									a(href='admin/settings')
										i.fas.fa-user-cog
										|  Settings
								li
									a(href='admin/profile')
										i.far.fa-id-card
										|  Profile
								li
									form(action='/logout', method='post')
										input(type='hidden', name='_csrf', value=csrfToken)
										a
											button(type='submit')
											i.fas.fa-sign-out-alt
											|  Logout
