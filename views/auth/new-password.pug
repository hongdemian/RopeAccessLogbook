extends ../partials/layout
block headBlock
	link(rel='stylesheet', href='/stylesheets/auth.css')
	link(rel='stylesheet', href='/stylesheets/forms.css')

block contentBlock
	main
		if errorMessages
			.user-message.user-message--error #{errorMessage}
		form.login-form(action='/new-password', method='POST')
			.form-control
				label(for='password') Password:
				input#password(type='password', name='password')
			.form-control
				label(for='confirm-password') Confirm Password:
				input#confirm-password(type='password', name='confirm-password')
			input(type='hidden', name='userId', value=userId)
			input(type='hidden', name='passwordToken', value=passwordToken)
			input(type='hidden', name='_csrf', value=csrfToken)
			button.button.hollow.home-form-submit-button(type='sumbit) Update Password
include ../partials/end
